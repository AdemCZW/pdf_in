{
    "name": "pdf_001",
    "version": "0.0.0",
    "private": true,
    "type": "module",
    "scripts": {
        "dev:frontend": "vite", // 前端開發
        "dev:server": "node server/server.js", // 後端開發
        "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:server\"",
        "build": "vite build", // 前端 build 指令
        "preview": "vite preview",
        "deploy:gh": "npm run build && gh-pages -d dist", // 若要使用 gh-pages 部署前端
        "start": "node server/server.js" // 生產環境啟動後端（我們稍後說明如何結合前端靜態資源）
    },
    "dependencies": {
        "jspdf": "^3.0.1",
        "jspdf-autotable": "^5.0.2",
        "vue": "^3.5.13",
        "express": "^5.1.0",
        "cors": "^2.8.5"
    },
    "devDependencies": {
        "@vitejs/plugin-vue": "^5.2.1",
        "gh-pages": "^6.3.0",
        "vite": "^6.2.1",
        "vite-plugin-vue-devtools": "^7.7.2",
        "concurrently": "^8.0.1"
    }
}